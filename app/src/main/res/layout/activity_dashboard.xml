<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundcolor"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:id="@+id/l_one"
       android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/backgroundCardSkyBlue"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/exm"
                    android:layout_width="215dp"
                    android:layout_height="118dp"
                    android:contentDescription="@string/examen"
                    android:src="@drawable/exam" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/examen"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_two"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/backgroundCardLightBlue"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ins"
                    android:layout_width="221dp"
                    android:layout_height="122dp"
                    android:contentDescription="@string/inscription"
                    android:src="@drawable/inscription" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/inscription"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l_three"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/backgroundCardLightBlue"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/pl"
                    android:layout_width="227dp"
                    android:layout_height="121dp"
                    android:contentDescription="@string/rapport"
                    android:src="@drawable/rapport" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/rapport"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textStyle="bold"/>

    </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>

    <LinearLayout
        android:id="@+id/l_four"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/backgroundCardSkyBlue"
            app:cardElevation="3dp"
            app:cardCornerRadius="1dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/bl"
                    android:layout_width="230dp"
                    android:layout_height="111dp"
                    android:contentDescription="@string/bulletin"
                    android:src="@drawable/bulletin" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="@string/bulletin"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>